interface Props {
  testimonial: {
    quote: string;
    name: string;
  };
}

const { testimonial } = Astro.props;
---

<div class="card text-center">
  <p class="text-dark italic mb-4">"{testimonial.quote}"</p>
  <p class="font-semibold text-primary">- {testimonial.name}</p>
</div>