---
// aman-dental/src/components/cards/TeamMemberCard.astro (UPDATED for Pure CSS)
interface Props {
  member: {
    name: string;
    role: string;
    bio: string;
    image: string; // Path to image in public folder
  };
}

const { member } = Astro.props;
---

<div class="card text-center">
  <img src={member.image} alt={`Photo of ${member.name}`} class="team-member-image w-32 h-32" />
  <h3 class="text-xl font-semibold text-dark mb-1">{member.name}</h3>
  <p class="text-primary font-medium mb-3">{member.role}</p>
  <p class="text-light text-sm">{member.bio}</p>
</div>