---
// aman-dental/src/pages/about.astro (FULL Update with Visual Enhancements)
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import TeamMemberCard from '../components/cards/TeamMemberCard.astro';
import { clinicInfo, teamMembers } from '../utils/data';

const pageTitle = "About Us";
const pageDescription = "Learn more about Aman Dental's mission, values, and our dedicated team committed to providing excellent dental care in Addis Ababa.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Fragment slot="header">
    <Header />
  </Fragment>

  <!-- About Us Hero Section -->
  <section class="page-hero-section text-white text-center" style="--bg-image: url('/images/hero-about.jpg');">
    <div class="container">
      <h1 class="text-4xl md:text-5xl font-extrabold mb-4 animate-fade-in-down">About Aman Dental</h1>
      <p class="text-lg md:text-xl max-w-2xl mx-auto animate-fade-in" style="animation-delay: 0.5s;">
        Your trusted partner for a lifetime of healthy and beautiful smiles.
      </p>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="bg-gradient-section py-16 md:py-24">
    <div class="container text-center max-w-3xl mx-auto">
      <h2 class="text-4xl font-bold mb-6">Our Mission & Values</h2>
      <p class="text-lg text-light leading-relaxed animate-fade-in" style="animation-delay: 0.7s;">
        {clinicInfo.missionStatement}
      </p>
    </div>
  </section>

  <!-- Team Section -->
  <section class="bg-gradient-section py-16 md:py-24">
    <div class="container text-center">
      <h2 class="text-4xl font-bold mb-4">Meet Our Dedicated Team</h2>
      <p class="text-lg text-light max-w-3xl mx-auto mb-12">
        Our experienced and compassionate team is committed to providing you with the highest quality dental care.
      </p>
      <div class="container-mobile-padded grid-container">
        {teamMembers.map((member, index) => (
          <div class="animate-slide-in-up" style={`animation-delay: ${0.2 * index}s;`}>
            <TeamMemberCard member={member} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</BaseLayout>